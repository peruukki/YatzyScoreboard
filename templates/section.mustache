<div class="label-column">
  <span class="empty"></span>
  {{#labels}}
  <div class="row">
    <div class="label">{{label}}</div>
    <div class="dice">
      {{#dice}}
      <img class="die" title="{{label}}" src="svg/{{.}}.svg">
      {{/dice}}
    </div>
  </div>
  {{/labels}}
  <div class="row total">Total</div>
</div>

{{#games}}
<div class="game-column">
  <header class="game-header">
    {{#playerNames}}
    <input type="text" class="player game-{{gameIndex}} player-{{playerIndex}}" placeholder="Name" value="{{name}}">
    {{/playerNames}}
  </header>
  {{#scores}}
  <div class="score-container">
    <span class="game-{{gameIndex}} player-1 player-score">
      <span class="score-diff player-1"></span>
      <input type="number" min="0" max="{{max}}" step="{{step}}" class="score" value="{{player1}}">
    </span>
    <span class="game-{{gameIndex}} player-2 player-score">
      <input type="number" min="0" max="{{max}}" step="{{step}}" class="score" value="{{player2}}">
      <span class="score-diff player-2"></span>
    </span>
  </div>
  {{/scores}}
  <div class="score-container">
    <span class="player-1 player-score">
      <span class="score-diff player-1"></span>
      <input type="number" min="0" class="total" readonly>
    </span>
    <span class="player-2 player-score">
      <input type="number" min="0" class="total" readonly>
      <span class="score-diff player-2"></span>
    </span>
  </div>
</div>
{{/games}}
